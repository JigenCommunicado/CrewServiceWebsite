{
  "name": "crewservicewebsite",
  "version": "1.0.0",
  "description": "Система подачи заявок для бортпроводников - полный стек веб-приложения",
  "main": "index.js",
  "scripts": {
    "install-all": "npm run install-backend && npm run install-frontend",
    "install-backend": "cd crewlife-backend && npm install",
    "install-frontend": "cd crewlife-website/backend && pip install -r requirements.txt",
    "start": "npm run start-backend & npm run start-frontend",
    "start-backend": "cd crewlife-backend && npm start",
    "start-frontend": "cd crewlife-website && python3 -m http.server 3001",
    "dev": "npm run dev-backend & npm run dev-frontend",
    "dev-backend": "cd crewlife-backend && npm run dev",
    "dev-frontend": "cd crewlife-website && python3 -m http.server 3001",
    "setup-db": "npm run setup-db-sqlite",
    "setup-db-sqlite": "cp database/crewlife-sqlite-backup.sqlite crewlife-website/backend/crewlife.db",
    "setup-db-dump": "sqlite3 crewlife-website/backend/crewlife.db < database/crewlife-sqlite-dump.sql",
    "build": "echo 'Проект готов к развертыванию'",
    "test": "npm run test-backend",
    "test-backend": "cd crewlife-backend && npm test",
    "clean": "rm -rf crewlife-backend/node_modules crewlife-website/backend/__pycache__",
    "deploy": "npm run install-all && npm run setup-db && npm run start"
  },
  "keywords": [
    "crewlife",
    "airline",
    "flight-attendant",
    "booking",
    "requests",
    "pwa",
    "nodejs",
    "python",
    "sqlite"
  ],
  "author": "CrewLife Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JigenCommunicado/CrewServiceWebsite.git"
  },
  "homepage": "https://github.com/JigenCommunicado/CrewServiceWebsite#readme",
  "engines": {
    "node": ">=14.0.0",
    "python": ">=3.6.0"
  },
  "devDependencies": {},
  "dependencies": {}
}
