# CrewServiceWebsite - Пример файла переменных окружения
# Скопируйте этот файл в .env и настройте под ваши нужды

# ===========================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ===========================================

# SQLite (по умолчанию)
DB_TYPE=sqlite
DB_PATH=./crewlife-website/backend/crewlife.db

# MySQL (альтернативный вариант)
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=crewlife
# DB_USER=crewlife_user
# DB_PASSWORD=your_password_here

# ===========================================
# НАСТРОЙКИ СЕРВЕРА
# ===========================================

# Node.js API
NODE_PORT=3000
NODE_HOST=localhost
NODE_ENV=development

# Python API
PYTHON_PORT=5000
PYTHON_HOST=localhost
PYTHON_ENV=development

# Фронтенд
FRONTEND_PORT=3001
FRONTEND_HOST=localhost

# ===========================================
# БЕЗОПАСНОСТЬ
# ===========================================

# JWT секретный ключ (сгенерируйте свой!)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Соль для хеширования паролей
BCRYPT_SALT_ROUNDS=12

# CORS настройки
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# ===========================================
# ЛОГИРОВАНИЕ
# ===========================================

# Уровень логирования (error, warn, info, debug)
LOG_LEVEL=info

# Файл логов
LOG_FILE=./logs/crewlife.log

# ===========================================
# EMAIL НАСТРОЙКИ (для уведомлений)
# ===========================================

# SMTP сервер
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# От кого отправлять письма
EMAIL_FROM=noreply@crewlife.com
EMAIL_FROM_NAME=CrewLife System

# ===========================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ===========================================

# Название приложения
APP_NAME=CrewLife
APP_VERSION=1.0.0
APP_DESCRIPTION=Система подачи заявок для бортпроводников

# URL приложения
APP_URL=http://localhost:3001
API_URL=http://localhost:3000

# Настройки сессии
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# ===========================================
# РАЗВЕРТЫВАНИЕ
# ===========================================

# Режим продакшн
NODE_ENV=production
DEBUG=false

# Путь к статическим файлам
STATIC_PATH=./crewlife-website

# Максимальный размер загружаемых файлов (в байтах)
MAX_FILE_SIZE=10485760

# ===========================================
# МОНИТОРИНГ
# ===========================================

# Включить метрики
ENABLE_METRICS=true

# Порт для метрик
METRICS_PORT=9090

# ===========================================
# КЭШИРОВАНИЕ
# ===========================================

# Redis (если используется)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# TTL кэша (в секундах)
CACHE_TTL=3600
